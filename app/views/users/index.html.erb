<h1 align="center">All Exchanged Users</h1>

<div align="center">
  <%= will_paginate @user %>
    <% @users.each do |user| %>
  <ul class="res-listing">
    <div class="row">
      <div class="well col-md-5 col-md-offset-3">
      <li><%= link_to gravatar_for(user), user_path(user) %></li>
      <li class="resource-name">
      <%= link_to user.username, user_path(user) %>
      </li>
      <li><small><%= pluralize(user.resources.count, "resource") if user.resources %></small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <%= will_paginate @user %>
</div>