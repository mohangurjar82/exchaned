<h2 align="center"> All Resources available are shown below</h2>

    <% @resources.each do |resource| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="resource-name">
            <h4>Name: <%= link_to resource.name, resource_path(resource) %></h4>
          </div>
        <div class="resource-body">
        <h4>Description: <%= truncate(resource.description, length: 80) %></h4>
        </div>
          <div class="resource-type">
        <h4>Resource Type: <%= resource.resource_type %></h4>
        </div>
      <div class="resource-show">
      <%= link_to "Edit this Resource", edit_resource_path(resource), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this Resource", resource_path(resource), method: :delete,
                                        data: { confirm: "This resource will be deleted?"},
                                        class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>