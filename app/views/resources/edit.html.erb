<h2>Edit your Resource</h2>


<% if @resource.errors.any? %>

<h2>The following errors prevented the article from being uploaded</h2>

  <ul>
      <% @resource.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for @resource do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :type %><br/>
    <%= f.text_field :resource_type %>
  </p>
  
   <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back to Resource Listing', resources_path %>
