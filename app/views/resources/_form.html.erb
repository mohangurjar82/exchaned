<%= render 'shared/errors', obj: @resource %>
  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@resource, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
          <%= f.label :name %>
          </div>
            <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Name of Resource", autofocus: true %>
            </div>
          </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label :resource_type %>
    </div>
      <div class="col-sm-8">
      <%= f.text_area :resource_type, class: "form-control", placeholder: "Resource type. ie. Word Doc, Pdf, PowerPoint" %>
      </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label :description %>
    </div>
      <div class="col-sm-8">
      <%= f.text_area :description, rows: 12, class: "form-control", placeholder: "Full Description of your resource. ie. Who is it for and how to use it." %>
      </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label "upload document" %>
    </div>
      <div class="col-sm-8">
      <%= f.file_field :picture, accept: '', class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

<% end %>

  <div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to "Cancel request and return to resource listing", resources_path %> ]
  </div>
  </div>
</div>

<script type="text/javascript">
  $('resource_picture').bind
</script>