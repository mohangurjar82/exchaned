<h2 align="center">Name of Resource: <%= @resource.name %></h2>

  <div class="well col-xs-8 col-xs-offset-2">
  <% if @resource.user %>
  <ul class="res-listing">
    <div class="row center">
      <div class="col-md-4 col-md-offset-4">
        <li>Created by:</li><br/>
        <li><%= link_to gravatar_for(@resource.user), user_path(@resource.user) %></li>
      <li class="resource-name">
        <%= link_to @resource.user.username, user_path(@resource.user) %>
      </li>
        <li>
          <small>
            <%= pluralize(@resource.user.resources.count, "resource") if @resource.user.resources %>
          </small>
        </li>
      </div>
    </div>
  </ul>

<% end %>

  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
      <%= simple_format(@resource.description) %>
    <div class="resource-show">
      <%= link_to "Edit this resource", edit_resource_path(@resource), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this resource", resource_path(@resource), method: :delete,
                  data: { confirm: "Are you sure you want to delete the resource?"},
                  class: "btn btn-xs btn-danger" %>
  
      <%= link_to "View all resources", resources_path, class: "btn btn-xs btn-success" %>
    </div>
</div>